{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build-ASMwithCPP",
            "command": "nasm",
            "args": [
                "-f",
                "elf64",
                "-g",
                "-o",
                "${fileBasenameNoExtension}.o",
                "${fileBasename}"
            ],
            "problemMatcher": {
                "pattern": {
                    "regexp": ".*error.*"
                }
            },
            "presentation": {
                "reveal": "silent",
                "clear": true
            }
        },
        {
            "label": "LINK",
            "command": "ld",
            "args": [
                "-o",
                "${fileBasenameNoExtension}.exe",
                "${fileBasenameNoExtension}.o"
            ],
            "dependsOn": [
                "build-ASMwithCPP"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": {
                "pattern": {
                    "regexp": "error"
                }
            },
            "presentation": {
                "reveal": "silent",
                "close": true,
                "clear": true
            }
        }
    ]
}